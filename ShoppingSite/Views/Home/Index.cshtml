<br/>


<div class="container" style="margin-top: 8%;">
    <div class="col-md-6 col-md-offset-3">

        <div class="row">
            <div class="col-xs-6 col-md-8">
                @using (Html.BeginForm())
                {
    <div class="input-group">
        <input id="tags" name="tags" type="text" class="form-control" placeholder="Search" autocomplete="on" alt="Max-width 100%">
        <div class="input-group-btn">
            <button class="btn btn-primary" type="submit" value="search">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </div>

    </div>}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-5 col-md-offset-3">
        <div class="col-xs-6 col-md-8">
            @if (Model != null)
            {
           @Html.ActionLink(Model.ItemName, "Details", "Store", new { id = Model.ItemId }, "") }
            else if (Model==null)
                {
                    <h5>Search Products Here</h5>
                }
        </div>
        </div>
    </div>

<script>

    $(function () {
        var availableTags = [];
        $.ajax(
            {
                type: 'GET',
                url: '/Home/getName',
                success: function (response) {

                    $.each(response, function (key, item) {
                        availableTags.push(item.ItemName);
                    });
                }
            });


        $("#tags").autocomplete({
            source: availableTags
        });
    });

</script>





